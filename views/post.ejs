<!DOCTYPE html>
<html lang="en">
  <%- include('layouts/header'); -%>
  <body>
    <%- include('layouts/navbar'); -%>

    <!-- Page Header -->
    <header
      class="masthead masthead-custom"
      style="background-image: url('<%= blogpost.image %>');"
    >
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading">
              <h1><%= blogpost.title %></h1>

              <span class="meta"
                >Posted by
                <a href="/users/profile/<%=blogpost.userid.username%>"
                  ><%= blogpost.userid.username %>, <%=blogpost.userid.role%></a
                >
                on <%= blogpost.datePosted.toDateString() %></span
              >
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->
    <article>
      <div class="container">
        <div class="d-flex justify-content-center mb-3">
          <div
            class="rating-system d-inline-flex align-items-center event-delegation-2"
          id="<%=blogpost._id%>">
            <svg
              class="bi bi-star-fill"
              width="1em"
              height="1em"
              viewBox="0 0 16 16"
              fill="currentColor"
              xmlns="http://www.w3.org/2000/svg"
            
            >
              <path
                d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"
              />
            </svg>
            <div
              class="rating-system__blog-score ml-2"
              id="<%=blogpost._id%>--rating"
            >
              <%= blogpost.rating %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <p class="lead">
              <%- blogpost.body %>
            </p>
          </div>
        </div>
      </div>
    </article>

    <hr />

    <%- include('layouts/footer'); -%> <%- include('layouts/scripts'); -%>
  </body>
</html>
